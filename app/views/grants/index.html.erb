<p id="notice"><%= notice %></p>

<h1>Grants</h1>

<table>
  <thead>
    <tr>
      <th>Deadline</th>
      <th>Internal deadline</th>
      <th>State</th>
      <th>Funder</th>
      <th>Program</th>
      <th>Priority level</th>
      <th>Range min</th>
      <th>Range max</th>
      <th>Funded amount</th>
      <th>Previosly awarded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grants.each do |grant| %>
      <tr>
        <td><%= grant.deadline %></td>
        <td><%= grant.internal_deadline %></td>
        <td><%= grant.state %></td>
        <td><%= grant.funder %></td>
        <td><%= grant.program %></td>
        <td><%= grant.priority_level %></td>
        <td><%= grant.range_min %></td>
        <td><%= grant.range_max %></td>
        <td><%= grant.funded_amount %></td>
        <td><%= grant.previosly_awarded %></td>
        <td><%= link_to 'Show', grant %></td>
        <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
        <td><%= link_to 'Destroy', grant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

